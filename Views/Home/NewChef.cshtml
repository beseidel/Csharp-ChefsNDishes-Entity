<a class='btn btn-secondary' href="/newdish">ADD A NEW DISH</a>


@model Chef
<h1>Add A New Chef!</h1>

<div class="container">
    
    <form class='big_form' asp-controller="Home" asp-action="processchef" method="POST">

        <div class="form-group">
            <span asp-validation-for="FirstName"></span>
            <label asp-for="FirstName"></label>
            <input type="text" class="form-control" id="exampleFormControlInput1" asp-for='FirstName' value="">
        </div>

        <div class="form-group">
            <span asp-validation-for="LastName"></span>
            <label asp-for="LastName"></label>
            <input type="text" class="form-control" id="exampleFormControlInput1" asp-for='LastName' value="">
        </div>

        <div class="form-group">
            <span asp-validation-for="DateOfBirth"></span>
            <label asp-for="DateOfBirth"></label>
            <input type="date" class="form-control" id="exampleFormControlInput1" asp-for='DateOfBirth' value="">
        </div>

        <button type="submit" value='submit' class="btn btn-primary">Add Chef</button>
    </form>
</div>

